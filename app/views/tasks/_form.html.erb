<%= form_with(model: [@list, @task], local: true, class: "ui form") do |f| %>
    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "input" %>
    </div>
    <div class="field">
        <%= f.label :body %>
        <%= f.text_field :body, class: "input"%>
    </div>
    <%= f.submit nil, class: "ui button" %>
<% end %>